package com.springmvc.model;

import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.List;

import org.springframework.jdbc.core.BeanPropertyRowMapper;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.jdbc.core.RowMapper;

import com.springmvc.beans.Emp_2210900050;

public class EmpDao_2210900050 {  
	JdbcTemplate template;  
	  
	public void setTemplate(JdbcTemplate template) {  
	    this.template = template;  
	}  
	public int save(Emp_2210900050 p){  
	    String sql="insert into Sinhvien_2210900050(name,lop,ngaysinh) values('"+p.getName()+"',"+p.getLop()+",'"+p.getNgaysinh()+"')";  
	    return template.update(sql);  
	}  
	public int update(Emp_2210900050 p){  
	    String sql="update Sinhvien_2210900050 set name='"+p.getName()+"', lop="+p.getLop()+",designation='"+p.getNgaysinh()+"' where id="+p.getId()+"";  
	    return template.update(sql);  
	}  
	public int delete(int id){  
	    String sql="delete from Sinhvien_2210900050 where id="+id+"";  
	    return template.update(sql);  
	}  
	public Emp_2210900050 getEmpById(int id){  
	    String sql="select * from Sinhvien_2210900050 where id=?";  
	    return template.queryForObject(sql, new Object[]{id},new BeanPropertyRowMapper<Emp_2210900050>(Emp_2210900050.class));  
	}  
	public List<Emp_2210900050> getEmployees(){  
	    return template.query("select * from Sinhvien_2210900050",new RowMapper<Emp_2210900050>(){  
	        public Emp_2210900050 mapRow(ResultSet rs, int row) throws SQLException {  
	            Emp_2210900050 e=new Emp_2210900050();  
	            e.setId(rs.getInt(1));  
	            e.setName(rs.getString(2));  
	            e.setLop(rs.getString(3));  
	            e.setNgaysinh(rs.getString(4));  
	            return e;  
	        }  
	    });  
	}  
	}  

